<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="automoyeu.pk.automoyeu.OrderFormActivity">

        <EditText android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Your Name"
            android:singleLine="true"/>

        <EditText android:id="@+id/contact_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/name"
            android:hint="Contact"
            android:singleLine="true"/>

        <EditText android:id="@+id/pref_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/contact_no"
            android:hint="Prefered Time"
            android:singleLine="true"/>

        <EditText android:id="@+id/address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="3"
            android:maxLines="10"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/pref_time"
            android:hint="Your Address"/>

        <EditText android:id="@+id/comments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="3"
            android:maxLines="15"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:layout_below="@+id/address"
            android:hint="Comments"/>

        <Button android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/comments"
            android:layout_marginTop="10dp"
            android:background="#ff4f9fc7"
            android:text="Next"
            android:onClick="next"/>

    </RelativeLayout>

</ScrollView>